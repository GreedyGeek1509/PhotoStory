<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:visibility="visible"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.pixtory.app.views.CircularImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:id="@+id/imgProfile"
            android:layout_marginLeft="25dp"/>
    <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:text="Steve Johnson"
            android:textColor="#31aef5"
            android:textSize="13sp"
            android:id="@+id/txtName"/>
    <com.pixtory.app.views.RobotoLightTextView
            android:layout_width="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:textSize="11sp"
                android:layout_gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/imgProfile"
              android:layout_below="@+id/txtName"
              android:text="Travel Enthusiast Travel Enthusiast Travel Enthusiast Travel Enthusiast st Travel Enthusiast Travel Enthusiast"
            android:textColor="@color/grey_3"
              android:textAllCaps="true"
            android:id="@+id/txtDesc" />

    <View android:layout_width="match_parent"
          android:layout_height="0.67dp"
            android:background="@color/separator_color"
            android:id="@+id/separator"
            android:layout_below="@+id/imgProfile"
          android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
          android:layout_marginRight="25dp"/>

            <com.pixtory.app.views.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:layout_below="@+id/separator"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_1"
                android:textSize="17sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="60dp"
                android:lineSpacingExtra="5sp"
                android:minHeight="@dimen/story_min_height"
                android:id="@+id/txtDetailsPara"/>
