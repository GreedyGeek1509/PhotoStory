<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <TextView
        android:text="Please submit your email address if you would like to contribute Pixtories"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:padding="20dp"/>
    <EditText
        android:id="@+id/c_email"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:lines="2"
        android:hint="Your email id" />
    <!--<View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3399ff"
        android:layout_marginRight="3dp"/>-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <android.support.v4.widget.Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/contribute_cancel"
            android:text="CANCEL"
            android:textSize="15sp"
            android:textColor="#669d9d"
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/contribute_submit"
            android:text="SUBMIT"
            android:textSize="15sp"
            android:textColor="#669d9d"
            android:paddingTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>

</LinearLayout>