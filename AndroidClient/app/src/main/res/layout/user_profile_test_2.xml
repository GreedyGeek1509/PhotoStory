<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main.appbar"
            android:layout_width="match_parent"
            android:layout_height="280dp">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main.collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways"
                android:minHeight="130dp">
                <ImageView android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:id="@+id/back_img"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="22dp"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/blur_person_image"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                    app:layout_collapseParallaxMultiplier="0.2"/>

                <com.pixtory.app.views.SlantView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/person_desc"
                    android:id="@+id/slant_view"
                    android:layout_gravity="bottom"/>


                <com.pixtory.app.views.CircularImageView
                    android:layout_gravity="top|center_horizontal"
                    android:layout_margin="20dp"
                    android:scaleType="centerCrop"
                    android:layout_width="133dp"
                    android:layout_height="133dp"
                    android:layout_marginTop="5dp"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                    android:src="@drawable/pixtory"
                    android:id="@+id/person_image"
                    app:layout_behavior="com.pixtory.app.userprofile.CircularImageBehaviour"
                    />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:minHeight="120dp"
            android:layout_gravity="top"
            android:layout_marginTop="160dp"
            app:layout_anchor="@+id/main.appbar"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:layout_behavior="com.pixtory.app.userprofile.ToolBarBehavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="23dp"
                        android:id="@+id/person_name"
                        android:textSize="22sp"
                        android:textColor="@color/white"/>
                    <TextView android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/person_desc"
                        android:textSize="10sp"
                        android:textColor="#ffffff"/>

                </LinearLayout>

                <TextView android:layout_width="93dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/person_follow"
                    android:textAlignment="center"
                    android:text="Follow"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:alpha="0.7"
                    android:background="@drawable/back_rectangle"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:behavior_overlapTop="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/profile_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:background="#d6dbe5"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </android.support.v4.widget.NestedScrollView>




    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
