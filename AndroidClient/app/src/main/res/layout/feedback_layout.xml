<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000"
                android:gravity="top">

    <LinearLayout android:layout_height="60dp"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
        <ImageView android:layout_height="40dp"
                   android:layout_width="40dp"
                   android:paddingTop="8dp"
                   android:src="@drawable/close_button"
                   android:layout_gravity="start"
                   android:id="@+id/close"
                   android:layout_weight="10">
        </ImageView>
        <TextView android:layout_height="match_parent"
                  android:layout_width="match_parent"
                  android:layout_weight="90"
                  android:id="@+id/header"
                  android:gravity="center"
                  android:textAlignment="center"
                  android:text="FEEDBACK FORM"
                  android:textSize="20dp">
        </TextView>
    </LinearLayout>

    <ImageView android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#FFFFFF"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp">
        <Spinner
                android:id="@+id/spinnertop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:popupBackground="#FFFFFF"/>

        <Spinner
                android:id="@+id/spinnermiddle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:popupBackground="#FFFFFF"
                android:layout_marginTop="10dp"/>

        <Spinner
                android:id="@+id/spinnerbottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:popupBackground="#FFFFFF"
                android:layout_marginTop="10dp"/>

        <EditText android:id="@+id/enterdetail"
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:hint="Enter details"
                android:textColor="#555555"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp">
            <Button android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="SUBMIT"
                    android:textColor="#FFFFFF"
                    android:background="@color/com_facebook_blue"
                    android:layout_weight="0.5"
                    android:id="@+id/submit"/>
            <ImageView android:background="@android:color/transparent"
                       android:layout_width="3dp"
                       android:layout_height="match_parent"/>
            <Button android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="CANCEL"
                    android:textColor="#FFFFFF"
                    android:background="@color/com_facebook_blue"
                    android:layout_weight="0.5"
                    android:id="@+id/cancel"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>