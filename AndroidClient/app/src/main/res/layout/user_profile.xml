<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/gradient">


        <FrameLayout  android:padding="0dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@null">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/blur_person_image"/>

            <com.pixtory.app.views.CircularImageView
                android:layout_marginTop="11dp"
                android:layout_marginLeft="111dp"
                android:layout_width="149dp"
                android:layout_height="149dp"
                android:color="#000000"
                android:alpha="0.4"
                android:id="@+id/person_image_boarder"/>

            <com.pixtory.app.views.CircularImageView
                android:layout_marginTop="19dp"
                android:layout_marginLeft="120dp"
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:id="@+id/person_image"/>

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="172dp"
                android:layout_marginLeft="23dp"
                android:id="@+id/person_name"
                android:textSize="22sp"
                android:textColor="@color/white"/>
            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="200dp"
                android:id="@+id/person_desc"
                android:textSize="10sp"
                android:textColor="#ffffff"/>

            <TextView android:layout_width="93dp"
                android:layout_height="30dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="171dp"
                android:id="@+id/person_follow"
                android:textAlignment="center"
                android:text="Follow"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:alpha="0.7"
                android:background="@drawable/back_rectangle"/>

            <ImageView android:layout_width="22dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/back"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="22dp"/>


        </FrameLayout>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/profile_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="#d6dbe5"/>

</LinearLayout>
