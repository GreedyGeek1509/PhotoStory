<!-- fragment_post_comment.xmlxml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:background="@color/white"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:text="@string/post_your_comment"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="#B3000000"
        android:id="@+id/post_comment_text"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/menu"/>

    <EditText
        android:id="@+id/et_comment"
        android:layout_below="@+id/post_comment_text"
        android:hint="@string/comment_textbox_hint"
        android:background="@drawable/square_background"
        android:layout_height="220dp"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:gravity="top"
        android:scrollbars="vertical"
        android:imeOptions="actionDone" />

    <TextView
        android:layout_below="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/char_limit_txt"
        android:text="@string/character_limit"/>

    <Button
        android:layout_below="@+id/char_limit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:background="@color/app_blue"
        android:textColor="@color/white"
        android:id="@+id/postComment"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:text="Submit"
        />

</RelativeLayout>