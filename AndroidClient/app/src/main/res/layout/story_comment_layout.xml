<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#fff"
    android:visibility="visible">

    <com.pixtory.app.views.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgProfile"
        android:layout_marginLeft="20dp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="7dp"
        android:text="Steve Johnson"
        android:textColor="#31aef5"
        android:textSize="14sp"
        android:id="@+id/txtName"/>
    <TextView android:layout_width="wrap_content"
        android:layout_marginLeft="7dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_below="@+id/txtName"
        android:text="Travel Enthusiast"
        android:layout_marginTop="3dp"
        android:textColor="@color/grey_3"
        android:textAllCaps="true"
        android:id="@+id/txtDesc"/>


        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_color"
            android:id="@+id/separator"
            android:layout_below="@+id/imgProfile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/comments_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/postBtn_ll"
        android:layout_below="@+id/separator">

        <ImageView
            android:layout_width="20dp"
            android:id="@+id/comment_img"
            android:src="@drawable/comment"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="1"
            android:textAllCaps="true"
            android:id="@+id/tvCount"
            android:layout_alignBottom="@+id/comment_img"
            android:layout_toRightOf="@+id/comment_img"
            android:layout_marginLeft="5dp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="comments"
            android:id="@+id/comment_text"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_alignBottom="@+id/comment_img"
            android:layout_toRightOf="@+id/tvCount"
            android:layout_marginLeft="4dp"
            />

        <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/commentsList"
           android:layout_below="@+id/comment_img"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"

            android:layout_marginBottom="10dp"
           >

       </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    <TextView
        android:id="@+id/loading_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:text="Loading Comments..."/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postBtn_ll"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:background="@color/app_blue"
                android:textColor="@color/white"
                android:id="@+id/postComment"
                android:layout_marginBottom="10dp"
                android:text="Post A Comment"
                android:layout_weight="0.45" />

        </LinearLayout>


</RelativeLayout>
