<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">


    <!-- Activity Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.pixtory.app.HomeActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/app_blue"
            android:visibility="visible"
            android:textSize="20sp"
            android:id="@+id/loading_text"
            android:gravity="center"
            android:background="@drawable/splash_background"
            android:text="Fetching Amazing Pixtories \nFor You...."/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:visibility="gone"
            android:id="@+id/whole_frame">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/black"/>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/user_profile_fragment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"></LinearLayout>

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/profileIcon"
                android:gravity="center"
                android:padding="10dp"
                android:layout_gravity="left"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/coach_mark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/blur_layer"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeffffff"
            android:orientation="vertical"
            android:visibility="invisible"
            android:id="@+id/top_overlay_long_tap">
            <TextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/text_background"
                android:text="@string/wallpaper_coach_mark_text"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/long_tap_text"/>
            <ImageView
                android:layout_width="132dp"
                android:layout_height="211dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="60dp"
                android:src="@drawable/long_tap_hand"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/top_overlay_swipe_up"
            android:background="#eeffffff"
            android:visibility="gone">
            <TextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="43dp"
                android:background="@drawable/text_background"
                android:text="@string/swipe_up_coach_mark_text"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/swipe_up_text_1"/>
            <ImageView
                android:layout_width="112dp"
                android:layout_height="300dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="180dp"
                android:src="@drawable/swipe_up_hand"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#eeffffff"
                android:textColor="@color/black"
                android:paddingBottom="30dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-regular"
                android:paddingTop="20dp"
                android:text="@string/swipe_up_coach_mark_text_2"
                android:textAlignment="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/swipe_up_text_2"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/top_overlay_wallpaper_setting"
            android:background="@color/coach_mark_background_color"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="80dp"
                android:text="We've got something new!"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="27sp"
                android:fontFamily="sans-serif-regular"
                android:textStyle="italic"
                android:id="@+id/wallpaper_top_text"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="150dp"
                android:text="@string/wallpaper_text"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="27sp"
                android:fontFamily="sans-serif-regular"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_blue"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="170dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="Yes please!"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/wallpaper_yes"
                    android:textAlignment="center"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Not now"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="125dp"
                android:id="@+id/wallpaper_no"
                android:paddingBottom="10dp"
                android:visibility="gone"/>

            <ToggleButton
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="150dp"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/toggle_selector"
                android:id="@+id/toggle_button"
                android:checked="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#30ffffff"
                android:textColor="@color/black"
                android:paddingBottom="30dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-regular"
                android:paddingTop="20dp"
                android:text="@string/wallpaper_text_2"
                android:textAlignment="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"/>
        </FrameLayout>

    </FrameLayout>

    <!-- Slide Navigation Content-->
    <ListView android:id="@+id/left_drawer_list"
        android:layout_width="71dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/app_blue"
        android:dividerHeight="0dp"
        android:background="#00ffffff" />

</android.support.v4.widget.DrawerLayout>