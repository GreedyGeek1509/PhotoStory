<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/layout_complete"
             android:background="@drawable/gradient"
             tools:context="com.pixtory.app.fragments.MainFragment">


    <LinearLayout android:id="@+id/pic_story_layout" android:padding="0dp"
                  android:layout_width="match_parent" android:orientation="vertical"
                  android:gravity="center"
                  android:layout_height="wrap_content"
                  android:background="#00000000" android:layout_gravity="bottom"
            android:visibility="gone"/>

    <FrameLayout android:id="@+id/main_layout" android:padding="0dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
            android:background="@null">

            <ImageView
                android:id="@+id/image_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        <RelativeLayout android:id="@+id/layout_image_details"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom">
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginRight="70dp"/>
            <View android:layout_width="1dp"
                  android:layout_height="20dp"
                  android:background="@color/white"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="70dp"/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/text_place"
                    android:textSize="11sp"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_3"/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_place"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/text_title"
                    android:textSize="14sp"
                    android:textColor="#31aef5"/>
            <!--<TextView android:layout_width="wrap_content"-->
                      <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                      <!--android:layout_marginBottom="30dp"-->
                      <!--android:layout_marginLeft="5dp"-->
                    <!--android:id="@+id/text_expert"-->
                <!--android:text="By Sonali kakrayne"-->
                    <!--android:textSize="12sp"-->
                      <!--android:textColor="@color/light_grey"/>-->
            <ImageView android:layout_width="40dp"
                       android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                       android:id="@+id/image_like"
                    android:src="@drawable/like"
                       android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/grey_3"
                android:textSize="13sp"
                android:id="@+id/like_count"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/image_like"
                android:layout_below="@+id/image_like"/>

            <com.pixtory.app.views.SlantView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:layout_below="@+id/like_count"
                android:id="@+id/slant_view"
                android:visibility="gone"
                />
        </RelativeLayout>


    </FrameLayout>
</FrameLayout>