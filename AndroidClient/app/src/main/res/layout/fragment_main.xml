<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/layout_complete"
             android:background="@drawable/gradient"
             tools:context="com.pixtory.app.fragments.MainFragment">


    <LinearLayout android:id="@+id/rec_prd_layout" android:padding="0dp"
                  android:layout_width="fill_parent" android:orientation="vertical" android:gravity="center"
                  android:layout_height="wrap_content"
                  android:background="@null" android:layout_gravity="bottom"/>

    <FrameLayout android:id="@+id/main_layout" android:padding="0dp"
                 android:layout_width="fill_parent" android:gravity="center"
                 android:layout_height="fill_parent">
        <LinearLayout
                android:id="@+id/player_opinion"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="#00000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"/>
        <RelativeLayout android:id="@+id/layout_controls_opinion"
                android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_gradient"
                android:visibility="gone">
            <RelativeLayout android:id="@+id/layout_opinion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:paddingTop="10dp"
                            android:paddingLeft="10dp">
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:paddingTop="10dp"
                           android:id="@+id/img_opinion"
                           android:src="@drawable/opinion_logo"/>
                <TextView
                        android:id="@+id/text_Opinion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:layout_marginRight="60dp"
                        android:textColor="#FFFFFF"
                        android:layout_toRightOf="@+id/img_opinion"/>
                <TextView
                        android:id="@+id/text_Views"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:layout_below="@+id/text_Opinion"
                        android:layout_toRightOf="@+id/img_opinion"/>
            </RelativeLayout>
            <FrameLayout
                    android:id="@+id/controls_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layout_opinion">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:layout_gravity="right"
                        android:id="@+id/layout_cta">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:layout_gravity="center" android:paddingRight="10dp">
                        <ImageView android:id="@+id/img_like"
                                   android:layout_width="60dp"
                                   android:layout_height="60dp"
                                   android:src="@drawable/like"
                                />
                        <ImageView android:id="@+id/img_share"
                                   android:layout_width="60dp"
                                   android:layout_height="60dp"
                                   android:src="@drawable/share"
                                   android:layout_marginTop="25dp"
                                   android:layout_below="@+id/img_like"/>

                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                        android:id="@+id/img_play"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pause"/>
                <ProgressBar
                        android:id="@+id/progressBarBuffer"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:indeterminateDrawable="@drawable/circular_progress_bar_indefinite"
                        android:visibility="gone"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:layout_gravity="bottom"
                              android:paddingBottom="20dp"
                              android:paddingLeft="10dp"
                              android:orientation="vertical"
                        android:id="@+id/layout_seek">
                    <TextView
                            android:id="@+id/textMaxLength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="00:45"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>
                    <com.pixtory.app.views.VerticalSeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:progress="0"
                            android:paddingTop="10dp"
                            android:thumb="@drawable/thumb"
                            style="@android:style/Widget.Holo.SeekBar">
                    </com.pixtory.app.views.VerticalSeekBar>
                    <TextView
                            android:id="@+id/textStartLength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="00:00"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>

                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
        <ImageView
                android:id="@+id/img_up_arrow"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|center"
                android:src="@drawable/up"
                android:visibility="gone"/>
    </FrameLayout>
</FrameLayout>