<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/layout_complete"
             android:background="@drawable/gradient"
             tools:context="com.pixtory.app.fragments.MainFragment">

    <ImageView
        android:id="@+id/image_main"
        android:src="@drawable/download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

        <com.pixtory.app.views.ObservableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_details_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/bottom_container"
                android:minHeight="700dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/like_layout"
                    android:background="@drawable/dim_background"
                    android:paddingTop="100dp"
                    android:paddingBottom="60dp"
                    android:translationY="40dp"
                    android:layout_height="@dimen/image_layout_height">
                        <View android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/grey_5"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="60dp"/>
                        <View android:layout_width="0.1dp"
                            android:layout_height="30dp"
                            android:background="@color/grey_5"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"/>
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-thin"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text_place"

                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@color/grey_5"/>
                        <TextView android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_place"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text_title"
                            android:textSize="17sp"
                            android:lineSpacingExtra="-4sp"
                            android:textColor="#31aef5"
                            android:layout_gravity="left"
                            android:maxLines="2"/>
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-thin"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="30dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/text_expert"

                            android:textSize="11sp"
                            android:textColor="@color/white"/>
                        <ImageView android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/image_like"
                            android:src="@drawable/like"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="45dp"/>

                        <TextView
                            android:fontFamily="sans-serif-light"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"

                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:id="@+id/like_count"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_alignLeft="@+id/image_like"
                            android:layout_below="@+id/image_like"/>
                    
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:id="@+id/swipe_up_sign"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                             android:text="Swipe Up"/>

                    </RelativeLayout>

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/pic_story_layout" android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_below="@+id/like_layout"
                    android:background="@color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/transparent"
                        android:layout_height="wrap_content">

                        <com.pixtory.app.views.SlantView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/slant_view"
                            android:visibility="visible"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/slant_view"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:id="@+id/content_layout"></LinearLayout>

                            </LinearLayout>

                </android.support.v4.widget.NestedScrollView>

                <!--<include android:layout="@layout/story_view_layout"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_below="@+id/slant_view"/>-->

            </RelativeLayout>

        </com.pixtory.app.views.ObservableScrollView>

    <!--COMMENT SHARE LAYOUT-->

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/comment_share_ll"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/btnComment"
        android:background="@color/grey_5"
        android:layout_height="match_parent"
        android:gravity="center"

        android:layout_weight="1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/comment" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:textColor="@color/grey_1"
            android:text="COMMENT"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/btnShare"
        android:background="@color/grey_5"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:textColor="@color/grey_1"
            android:text="SHARE"/>

        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>






